---
import "../styles/style.css"
import Image from "astro/components/Image.astro"
import ellipsis from "../images/icon-ellipsis.svg"
const { id } = Astro.props
---

<div class="card__container" id={id}>
	<div class="card__subcontainer">
		<div class="work__container">
			<p class="work__type">Work</p>
			<Image src={ellipsis} alt="" class="work__ellipse" />
		</div>
		<div class="time__container">
			<p class="time__hours">32hrs</p>
			<p class="time__total-hours">Last Week - 36hrs</p>
		</div>
	</div>

	<style>
		.card__container {
			position: relative;
		}

		.card__subcontainer {
			position: absolute;
			width: 100%;
			height: 122px;
			bottom: 0;
			padding: 2rem;
			background-color: var(--darkBlue);
			color: white;
		}

		/* ----- Work Container ----- */
		.work__container {
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: space-between;
			font-size: 16px;
			font-weight: 500;
		}

		/* ----- Time Container ----- */
		.time__container {
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: space-between;
			font-size: 24px;
			font-weight: 400;
			margin-top: 1rem;
		}

		.time__total-hours {
			font-size: 12px;
			color: var(--paleBlue);
		}
	</style>
</div>
